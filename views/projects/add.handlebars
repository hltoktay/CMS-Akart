<div class="card card-body">

<form action="/projects" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="title">Project Title</label>
            <input type="text" class="form-control" name="title" placeholder="Title" required>
        </div>
        <div class="form-group col-md-6">
            <label for="client">Client</label>
            <input type="text" class="form-control" name="client" placeholder="Client" required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="location">Location</label>
            <input type="text" class="form-control" name="location" required>
        </div>
        {{!-- <div class="form-group col-md-4">
            <label for="date">Date</label>
            <input type="text" class="form-control" name="date">
        </div> --}}
        <div class="form-group col-md-2">
            <label for="surface">Surface</label>
            <input type="number" class="form-control" name="surface" required>
        </div>
        <br>
        <div class="form-group col-md-4">
            <label for="website">Website</label>
            <input type="text" class="form-control" name="website">
        </div>
        <div class="form-group col-md-4">
            <label for="sector">Sector</label>
            <select id="inputState" class="form-control" name="sector" required>
                <option selected>Choose...</option>
                <option value="Coffee-Restaurant">Coffee - Restaurant</option>
                <option value="Bar">Bar</option>
                <option value="Takeaway">Take-away</option>
                <option value="Residantial-Home">Residantial - Home</option>
                <option value="Commercial">Commercial</option>
            </select>
        </div>
          <div class="form-group col-md-4">
            <label for="website">Work</label>
            <input type="text" class="form-control" name="work">
        </div>
        <div class="form-group col-md-12">
            <label for="details">Details</label>
            <textarea class="form-control" name="details" rows="3"></textarea>
        </div>

        <div class="form-group col-md-12">
                <label for="Select Image">Select Image: </label>
                <input type="file" name="image" class="form-control-file">
        </div>

    </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

</form>

</div>
